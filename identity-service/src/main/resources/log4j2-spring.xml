<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <!-- %d date, %-5level log level, %t thread, %C className, %m message, %n - new line -->
            <!-- %-5level give 5 chars of logging level, all are < 5 -->
            <PatternLayout
                    pattern="%d %highlight{%-5level} [%t] %style{%C}{blue}: %m%n%throwable" />
        </Console>
        <SplunkHttp
                name="splunkhttp"
                url="${env:SPLUNK_URL:-http://localhost:8088}"
                token="${env:SPLUNK_TOKEN:-25b8746e-9100-4d44-80fc-bd6989759a45}"
                index="${env:SPLUNK_INDEX:-identity_service_api}"
                type="raw"
                disableCertificateValidation="true"
        >
            <PatternLayout pattern="%m"/>
        </SplunkHttp>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="console" />
            <AppenderRef ref="splunkhttp" />
        </Root>
    </Loggers>
</Configuration>